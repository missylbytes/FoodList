<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
	id        = "com.avengersGroup.mealmouse"
	versionCode="1"
	version   = "1.0">
  <name>MealMouse</name>
  <description>
A "Craigslist for Food". Group project for CS class		</description>
<author href="mealmouse.com" 
email="melisagriff@gmail.com">
Melisa Griffin
</author>
<gap:config-file platform="android" parent="/manifest">
     <application android:debuggable="true" />
</gap:config-file>
<gap:platform name="android" />
<preference name="android-installLocation" value="auto" />
<preference name="BackgroundColor" value="0xff000000 "/>
<icon src="res/icon/android/mealMouseLogo-ldpi.png" gap:platform="android" gap:density="ldpi" />
<icon src="res/icon/android/mealMouseLogo-mdpi.png" gap:platform="android" gap:density="mdpi" />
<icon src="res/icon/android/mealMouseLogo-xhdpi.png" gap:platform="android" gap:density="hdpi" />
<icon src="res/icon/android/mealMouseLogo-xxhdpi.png" gap:platform="android" gap:density="xhdpi" />
<icon src="res/icon/android/mealMouseLogo-xxxhdpi.png" gap:platform="android" gap:density="xxhdpi" />
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/network"/>

<gap:plugin name="org.apache.cordova.geolocation"  />
<gap:plugin name="org.apache.cordova.dialogs"  />
<gap:plugin name="org.apache.cordova.device"  />
<gap:plugin name="org.apache.cordova.network-information"  />
<gap:plugin name="org.apache.cordova.console"  />
<gap:plugin name="org.apache.cordova.inappbrowser"  />
<gap:plugin name="org.apache.cordova.network-information"  />
<access origin="*" subdomains="true" />
</widget>